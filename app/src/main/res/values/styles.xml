<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Bold">
       <item name="android:textStyle">bold</item>
    </style>

    <style name="AppChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_background_chip</item>
        <item name="chipStrokeWidth">@dimen/border_xsmall</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textColor">@color/selector_text_color_chip</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>