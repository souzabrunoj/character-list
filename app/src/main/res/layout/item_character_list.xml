<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@drawable/shape_rounded_corners"
    android:padding="@dimen/padding_xxsmall">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_character_image_item_list"
        android:layout_width="@dimen/character_list_avatar_size"
        android:layout_height="@dimen/character_list_avatar_size"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageViewStyle"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/border_xsmall"
        tools:src="@drawable/img_avatar_place_holder" />

    <TextView
        android:id="@+id/tv_character_name_item_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xsmall"
        android:textAppearance="@style/TextAppearance"
        app:layout_constraintBottom_toBottomOf="@id/iv_character_image_item_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_character_image_item_list"
        app:layout_constraintTop_toTopOf="@id/iv_character_image_item_list"
        tools:text="Toxic Rick" />
</androidx.constraintlayout.widget.ConstraintLayout>